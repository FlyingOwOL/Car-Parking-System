<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CustomerDashboardController">
   <top>
       <!-- HEADER/NAVIGATION BAR -->
      <HBox alignment="CENTER_RIGHT" prefHeight="68.0" prefWidth="1200.0" style="-fx-background-color: #4b614d;" BorderPane.alignment="CENTER">
         <children>
             <Label contentDisplay="CENTER" prefHeight="36.0" prefWidth="450.0" style="-fx-alignment: center;" text="CARPARK.io" textAlignment="CENTER" textFill="WHITE" textOverrun="CLIP">
                 <font>
                     <Font name="Britannic Bold" size="36.0" />
                 </font>
             </Label>
            <Pane prefHeight="68.0" prefWidth="310.0" />
            <Button fx:id="homeBUTTON" contentDisplay="TOP" mnemonicParsing="false" onAction="#handleHomeClick" style="-fx-background-color: transparent;" text="HOME" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Times New Roman Bold" size="16.0" />
               </font>
            </Button>
            <Pane prefHeight="68.0" prefWidth="25.0" />
            <Button fx:id="reservationBUTTON" mnemonicParsing="false" onAction="#handleReservationClick" style="-fx-background-color: transparent;" text="RESERVATION" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Times New Roman Bold" size="16.0" />
               </font>
            </Button>
            <Pane layoutX="708.0" layoutY="10.0" prefHeight="68.0" prefWidth="25.0" />
            <MenuButton fx:id="accountBUTTON" alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" style="-fx-background-color: TRANSPARENT;" text="ACCOUNT" textFill="WHITE">
              <items>
                <MenuItem fx:id="profileMENUITEM" mnemonicParsing="false" onAction="#handleProfileClick" text="PROFILE" />
                <MenuItem fx:id="logoutMENUITEM" mnemonicParsing="false" onAction="#handleLogoutClick" text="LOG OUT" />
              </items>
               <font>
                  <Font name="Times New Roman Bold" size="16.0" />
               </font>
            </MenuButton>
         </children></HBox>
   </top>

    <!-- CONTENT PLACEHOLDER -->
   <center>
      <AnchorPane fx:id="mainContentArea" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #FFFFFF;" BorderPane.alignment="CENTER" />
   </center>

    <!-- FOOTER -->
    <bottom>
        <HBox alignment="CENTER" prefHeight="40.0" style="-fx-background-color: #4b614d;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Admin Control Panel - Â© 2025 Car Park System" textFill="WHITE">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </bottom>
</BorderPane>
