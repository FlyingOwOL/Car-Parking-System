<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ProfilePageController">
    <children>
        <ScrollPane fitToWidth="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <content>
                <VBox alignment="TOP_CENTER" spacing="20.0">
                    <padding>
                        <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
                    </padding>
                    <children>
                        <Label text="My Profile &amp; Account">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>

                        <!-- Profile Information Section -->
                        <GridPane hgap="10.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label text="First Name" style="-fx-font-weight: bold;" />
                                <Label text="Last Name" style="-fx-font-weight: bold;" GridPane.rowIndex="1" />
                                <Label text="Email (Username)" style="-fx-font-weight: bold;" GridPane.rowIndex="2" />
                                <Label text="Join Date" style="-fx-font-weight: bold;" GridPane.rowIndex="3" />

                                <TextField fx:id="firstNameField" editable="false" GridPane.columnIndex="1" />
                                <TextField fx:id="lastNameField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Label fx:id="emailLabel" text="email@example.com" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <Label fx:id="joinDateLabel" text="2025-01-01" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                <Button fx:id="editProfileButton" mnemonicParsing="false" onAction="#handleEditProfile" text="Edit Profile" GridPane.columnIndex="2" />
                                <Button fx:id="saveProfileButton" mnemonicParsing="false" onAction="#handleSaveProfile" text="Save Changes" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                            </children>
                        </GridPane>

                        <!-- My Vehicles Section -->
                        <VBox spacing="10.0">
                            <children>
                                <Label text="My Vehicles">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Label>
                                <TableView fx:id="vehiclesTable" prefHeight="150.0">
                                    <columns>
                                        <TableColumn fx:id="plateColumn" prefWidth="120.0" text="Plate Number" />
                                        <TableColumn fx:id="brandColumn" prefWidth="150.0" text="Make / Brand" />
                                        <TableColumn fx:id="typeColumn" prefWidth="150.0" text="Vehicle Type" />
                                    </columns>
                                </TableView>
                                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                    <children>
                                        <Button fx:id="addVehicleButton" mnemonicParsing="false" onAction="#handleAddVehicle" style="-fx-background-color: #4b614d; -fx-text-fill: white;" text="+ Add New Vehicle" />
                                        <Button fx:id="deleteVehicleButton" mnemonicParsing="false" onAction="#handleDeleteVehicle" style="-fx-background-color: #c94c4c; -fx-text-fill: white;" text="- Delete Selected" />
                                    </children>
                                </HBox>
                            </children>
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                        </VBox>

                        <!-- My Reservations Section -->
                        <VBox spacing="10.0">
                            <children>
                                <Label text="My Reservation History">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Label>
                                <TableView fx:id="reservationsTable" prefHeight="200.0">
                                    <columns>
                                        <TableColumn fx:id="transactNoColumn" prefWidth="75.0" text="ID" />
                                        <TableColumn fx:id="resPlateColumn" prefWidth="100.0" text="Vehicle" />
                                        <TableColumn fx:id="resSlotColumn" prefWidth="75.0" text="Slot ID" />
                                        <TableColumn fx:id="resTimeInColumn" prefWidth="170.0" text="Time In" />
                                        <TableColumn fx:id="resTimeOutColumn" prefWidth="170.0" text="Time Out" />
                                        <TableColumn fx:id="resStatusColumn" prefWidth="100.0" text="Status" />
                                        <TableColumn fx:id="resTotalColumn" prefWidth="100.0" text="Total Paid" />
                                    </columns>
                                </TableView>
                                <HBox alignment="CENTER_RIGHT">
                                    <children>
                                        <Button fx:id="cancelReservationButton" mnemonicParsing="false" onAction="#handleCancelReservation" style="-fx-background-color: #f0ad4e;" text="Cancel Selected Reservation" />
                                    </children>
                                </HBox>
                            </children>
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
