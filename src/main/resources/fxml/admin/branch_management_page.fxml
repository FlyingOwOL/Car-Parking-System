<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Admin.BranchManagementController">
    <children>
        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label text="Car Park Asset Management">
                    <font>
                        <Font name="Britannic Bold" size="24.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" left="20.0" top="20.0" />
                    </VBox.margin>
                </Label>
                <Separator />
                <TabPane side="LEFT" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                    <tabs>
                        <!-- TAB 1: New Branch Creation (RUBIA) -->
                        <Tab style="-fx-background-color: white;" text="New Branch">
                            <content>
                                <AnchorPane style="-fx-padding: 20;">
                                    <children>
                                        <VBox spacing="15.0" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0">
                                            <children>
                                                <Label style="-fx-font-weight: bold; -fx-font-size: 16;" text="Create New Branch Location" />

                                                <GridPane hgap="10.0" vgap="10.0">
                                                    <columnConstraints>
                                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
                                                    </columnConstraints>
                                                    <rowConstraints>
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                    </rowConstraints>
                                                    <children>
                                                        <Label text="Name:" />
                                                        <TextField fx:id="branchNameField" promptText="e.g., Eastwood City" style="-fx-border-color: #4b614d;" GridPane.columnIndex="1" />
                                                        <Label text="Max Slots:" GridPane.rowIndex="1" />
                                                        <TextField fx:id="maxSlotsField" promptText="e.g., 200" style="-fx-border-color: #4b614d;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                                        <Label text="Contact:" GridPane.rowIndex="2" />
                                                        <TextField fx:id="branchContactField" promptText="e.g., 0917-xxx-xxxx" style="-fx-border-color: #4b614d;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                                        <Label text="Email:" GridPane.rowIndex="3" />
                                                        <TextField fx:id="branchEmailField" promptText="e.g., eastwood@park.com" style="-fx-border-color: #4b614d;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                                        <Label text="Location:" GridPane.rowIndex="4" />
                                                        <TextField fx:id="branchLocationField" promptText="Full Address" style="-fx-border-color: #4b614d;" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                                    </children>
                                                </GridPane>
                                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                    <children>
                                                        <Label style="-fx-font-weight: bold;" text="Hours:" />
                                                        <TextField fx:id="openingTimeField" prefWidth="70.0" promptText="06:00" style="-fx-border-color: #4b614d;" />
                                                        <Label text="to" />
                                                        <TextField fx:id="closingTimeField" prefWidth="70.0" promptText="22:00" style="-fx-border-color: #4b614d;" />
                                                    </children>
                                                </HBox>
                                                <Button mnemonicParsing="false" onAction="#handleCreateNewBranch" style="-fx-background-color: #4b614d; -fx-text-fill: white;" text="Create Branch">
                                                    <VBox.margin>
                                                        <Insets top="10.0" />
                                                    </VBox.margin>
                                                </Button>
                                                <Label fx:id="branchStatusLabel" textFill="RED" />
                                            </children>
                                        </VBox>
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>

                        <!-- TAB 2: Pricing Rule Management (RUBIA) -->
                        <Tab style="-fx-background-color: white;" text="Pricing">
                            <content>
                                <AnchorPane style="-fx-padding: 20;">
                                    <children>
                                        <VBox spacing="10.0" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0">
                                            <children>
                                                <Label style="-fx-font-weight: bold; -fx-font-size: 16;" text="Set/Update Pricing Rules" />
                                                <GridPane hgap="10.0" vgap="10.0">
                                                    <columnConstraints>
                                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                                                    </columnConstraints>
                                                    <rowConstraints>
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                    </rowConstraints>
                                                    <children>
                                                        <Label text="Branch:" />
                                                        <ComboBox fx:id="pricingBranchComboBox" prefWidth="200.0" promptText="Select Branch" GridPane.columnIndex="1" />
                                                        <Label text="Slot Type:" GridPane.rowIndex="1" />
                                                        <ComboBox fx:id="pricingSlotTypeComboBox" prefWidth="200.0" promptText="Select Slot Type" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                                        <Label text="Hourly Rate (₱):" GridPane.rowIndex="2" />
                                                        <TextField fx:id="hourlyRateField" promptText="e.g., 50.00" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                                        <Label text="Overtime Rate (₱):" GridPane.rowIndex="3" />
                                                        <TextField fx:id="overtimeRateField" promptText="e.g., 75.00" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                                    </children>
                                                </GridPane>
                                                <Button mnemonicParsing="false" onAction="#handleSetPricingRule" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Set / Update Rule">
                                                    <VBox.margin>
                                                        <Insets top="10.0" />
                                                    </VBox.margin>
                                                </Button>
                                                <Label fx:id="pricingStatusLabel" textFill="RED" />
                                            </children>
                                        </VBox>
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>

                        <!-- TAB 3: Slot Type Configuration (TENORIO) -->
                        <Tab style="-fx-background-color: white;" text="Slot Config">
                            <content>
                                <AnchorPane style="-fx-padding: 20;">
                                    <children>
                                        <VBox spacing="10.0" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0">
                                            <children>
                                                <Label style="-fx-font-weight: bold; -fx-font-size: 16;" text="Modify Slot Type / Maintenance" />
                                                <GridPane hgap="10.0" vgap="10.0">
                                                    <columnConstraints>
                                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                                                    </columnConstraints>
                                                    <rowConstraints>
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                    </rowConstraints>
                                                    <children>
                                                        <Label text="Branch:" />
                                                        <ComboBox fx:id="configBranchComboBox" prefWidth="200.0" promptText="Select Branch" GridPane.columnIndex="1" />
                                                        <Label text="Spot ID:" GridPane.rowIndex="1" />
                                                        <TextField fx:id="spotIdField" promptText="e.g., A01" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                                        <Label text="New Slot Type:" GridPane.rowIndex="2" />
                                                        <ComboBox fx:id="newSlotTypeComboBox" prefWidth="200.0" promptText="Select New Type" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                                    </children>
                                                </GridPane>
                                                <Button mnemonicParsing="false" onAction="#handleUpdateSlotType" style="-fx-background-color: #1976D2; -fx-text-fill: white;" text="Update Slot Type">
                                                    <VBox.margin>
                                                        <Insets top="10.0" />
                                                    </VBox.margin>
                                                </Button>
                                                <Label fx:id="configStatusLabel" textFill="RED" />
                                            </children>
                                        </VBox>
                                    </children>
                                </AnchorPane>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
